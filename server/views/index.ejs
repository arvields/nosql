<style>
    /* Add this style block within the head of your HTML document or in your AngularJS template */
    .btn-violet {
        background-color: #8E8FFA;
        color: white; /* Optionally, set the text color to white for better contrast */
    }

    .btn-violet:hover {
        background-color: #7752FE; /* Change the color on hover if desired */
    }
</style>

<!doctype html>
<html ng-app="HotelApp" ng-cloak>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>Hotel Booking System</title>
    <base href="/" />
    <!-- Add a link to the favicon -->
    <link rel="icon" type="image/png" href="/img/logo.png" />
    <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <![endif]-->
    <link href="/css/hotel-booking-mean-stack.css" rel="stylesheet" />
    <style>
        [ng-cloak] {
            display: none !important;
        }
    </style>
    <script type="text/javascript">
        window.user = <%- JSON.stringify(user) %>;
    </script>
</head>


<body>
	<div class="navbar navbar-inverse set-radius-zero">
		<div class="container" ng-controller="IndexController">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/home">
					<img src="/img/hotel.jpg" style="width: 150px; height: auto;" />
				</a>
			</div>

			<div class="right-div">
				<a href="/login" ng-hide="session.isLoggedIn && session.currentUser"
					class="btn btn-violet pull-right">Login</a>
				<a href="/signup" ng-hide="session.isLoggedIn && session.currentUser"
					class="btn btn-violet">Sign-up</a>&nbsp;
				<span ng-if="session.isLoggedIn && session.currentUser"
					ng-bind="'Welcome, ' + session.currentUser.firstName"></span>&nbsp;&nbsp;
				<a href="/home" ng-if="session.isLoggedIn && session.currentUser" class="btn btn-violet pull-right"
					ng-click="logout()">Logout</a>
			</div>
		</div>
	</div>
	<section class="menu-section">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="navbar-collapse collapse ">
						<!-- menu-top-active -->
						<ul id="menu-top" class="nav navbar-nav navbar-left">
							<li><a href="/home">DASHBOARD</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>
	<div class="content-wrapper">
		<div class="container" ng-view>

		</div>
	</div>
	<!-- CONTENT-WRAPPER SECTION END-->
	<script type="text/javascript" src="/js/hotel-booking-mean-stack-lib.js"></script>
	<script type="text/javascript" src="/js/hotel-booking-mean-stack.js"></script>
</body>

</html>